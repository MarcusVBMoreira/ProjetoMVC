      <th scope="col">Opções</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td>Marcus Moreira</td>
      <td>marcus@gmail.com</td>
      <td>(11) 98765-4321</td>
      <td>
        <div class="btn-group" role="group">
            <a asp-controller="Cliente" asp-action="Atualizar" role="button" class="btn btn-primary">Atualizar</a>
            <a asp-controller="Cliente" asp-action="Apagar" role="button" class="btn btn-danger">Apagar</a>
        </div>
      </td>
    </tr>
  </tbody>
</table>
